---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Welcome to Teamania" />
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- TODO: separate Navbar & its logic into its own component -->
    <!-- Navbar -->
    <!-- TODO y navbar not sticky on small devices? 
		 			- skill issues
		-->
    <div
      class="sticky top-0 z-50 mx-auto w-full max-w-[1024px] flex-col overflow-hidden rounded-b-3xl border-b bg-white p-2"
    >
      <div class="sticky top-0 flex flex-wrap justify-between bg-white p-2">
        <div class="flex space-x-2">
          <img alt="logo" src="/teamania_logo.svg" class="h-8" />
          <span class="text-2xl font-semibold">Teamania</span>
        </div>

        <!-- Hamburger button -->
        <button
          class="inline-block"
          onclick="animate_ham_menu_icon(this); show_nav_items()"
        >
          <div
            class="bar1 mx-0 my-1 h-1 w-7 rounded-full bg-black duration-300"
          >
          </div>
          <div
            class="bar2 mx-0 my-1 h-1 w-7 rounded-full bg-black duration-300"
          >
          </div>
          <div
            class="bar3 mx-0 my-1 h-1 w-7 rounded-full bg-black duration-300"
          >
          </div>
        </button>
      </div>

      <!-- Nav menu items -->
      <!-- TODO animate this shit so it looks cool -->
      <div id="nav-items" class="hidden">
        <a
          href=""
          class="block border-y px-4 py-3 text-center text-7xl duration-300 ease-in-out hover:bg-gray-200"
        >
          Contact us
        </a>
        <a
          href=""
          class="block px-4 py-3 text-center text-7xl duration-300 ease-in-out hover:bg-gray-200"
        >
          Deals
        </a>
        <a
          href=""
          class="block border-y px-4 py-3 text-center text-7xl duration-300 ease-in-out hover:bg-gray-200"
        >
          Menu
        </a>
      </div>
    </div>
    <script is:inline>
      function animate_ham_menu_icon(x) {
        x.classList.toggle("change");
      }

      function show_nav_items() {
        let x = document.getElementById("nav-items");
        if (x.style.display === "block") {
          x.style.display = "none";
        } else {
          x.style.display = "block";
        }
      }

      // hamburger menu thingie toggle
